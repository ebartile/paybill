{
  "name": "@paybilldev/server",
  "version": "0.0.1-beta.1",
  "description": "",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "keywords": [],
  "author": {
    "name": "ebartile",
    "email": "ebartile@gmail.com"
  },
  "scripts": {
    "build": "unbuild --clean",
    "stub": "unbuild --stub",
    "start": "node dist/server.js",
    "dev": "tsnd --respawn src/server.ts",
    "typecheck": "tsc --project tsconfig.json",
    "clean": "rimraf node_modules dist .turbo coverage",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"tsc -w\" \"nodemon dist/index.js\"",
    "test": "NODE_ENV=test vitest",
    "cov": "NODE_ENV=test  vitest --coverage"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paybilldev/paybill.git",
    "directory": "apps/server"
  },
  "license": "AGPL-3.0",
  "devDependencies": {
    "@paybilldev/tsconfig": "workspace:^",
    "@types/flat": "^5.0.5",
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.9",
    "@vitest/coverage-istanbul": "^3.2.4",
    "dotenv": "^17.2.2",
    "rimraf": "^6.0.0",
    "ts-node": "10.9.2",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vitest": "^3.0.5"
  }
}
