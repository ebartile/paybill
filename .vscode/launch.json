{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Paybill (Dev Mode)",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["start:dev"],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Paybill (Original)",
			"args": ["${workspaceFolder}/src/main.ts"],
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"protocol": "inspector"
		},
		{
			"name": "Docker Debug Paybill",
			"request": "launch",
			"type": "docker",
			"platform": "node",
			"preLaunchTask": "docker-compose: debug:paybill",
			"removeContainerAfterDebug": true,
			"node": {
				"port": 3000,
				"localRoot": "${workspaceRoot}",
				"remoteRoot": "/app/paybill",
				"sourceMaps": true,
				"skipFiles": ["<node_internals>/**"]
			}
		}
	]
}
