{
  "name": "@paybilldev/monorepo",
  "private": true,
  "type": "module",
  "description": "Paybill. Simple is better than complex.",
  "license": "AGPL-3.0-only",
  "author": "ebartile <ebartile@gmail.com>",
  "keywords": [
    "javascript",
    "typescript"
  ],
  "version": "0.0.1-beta",
  "scripts": {
    "build": "turbo --filter \"./packages/*\" --filter \"./apps/*\" build",
    "test": "turbo --filter \"./packages/*\" --filter \"./apps/*\" test",
    "cov": "turbo --filter \"./packages/*\" --filter \"./apps/*\" cov",
    "clean": "turbo --filter \"./packages/*\" --filter \"./apps/*\" clean && rimraf node_modules .turbo",
    "dev": "turbo --filter \"./apps/*\" dev",
    "start": "turbo --filter \"./apps/*\" start",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "format": "biome format . --write",
    "release": "turbo --filter \"./packages/*\" --filter \"./apps/*\" build && bumpp && pnpm -r publish --access public --no-git-checks",
    "release:no-build": "bumpp && pnpm -r publish --access public --no-git-checks --tag next",
    "release:canary": "turbo --filter \"./packages/*\" --filter \"./apps/*\" build && bumpp && pnpm -r publish --access public --tag canary --no-git-checks",
    "bump": "bumpp"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/node": "^20.17.9",
    "@paybilldev/tsconfig": "workspace:^",
    "bumpp": "^9.8.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.4",
    "tinyglobby": "^0.2.10",
    "rimraf": "^6.0.0",
    "turbo": "^2.3.3",
    "ts-node": "10.9.2",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "node": "20.14.0",
    "pnpm": "9.15.0"
  },
  "homepage": "https://github.com/paybilldev/paybill/tree/main",
  "repository": {
    "type": "git",
    "url": "https://github.com/paybilldev/paybill.git"
  },
  "bugs": {
    "url": "https://github.com/paybilldev/paybill/issues"
  }
}